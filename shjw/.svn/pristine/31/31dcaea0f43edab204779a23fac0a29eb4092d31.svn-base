.login_top{
  position: absolute;
  width: 100%;
  height: 50%;
  background-color: #00bc8d;
}
.login_main{
  width: 1000px;
  height: 580px;
  /* position: absolute; */
  /* left: 15%; */
  /* top: 50%; */
  /* margin-top: -290px; */
  margin: auto;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
.login_middle{
  width: 100%;
  height: 434px;
  box-shadow: 0px 4px 3px #eaeaea;
  background-color: #fafffd;
  border: 2px solid #eaeaea;
}
.login_h{
  font-size: 42px;
 color: #fefdfe;
  margin-bottom: 30px;
}
.login_mleft{
  width:530px;
  height:322px;
  margin-left: 48px;
  margin-top: 53px;
  float: left;
  vertical-align: middle;
}
.login_mright{
  width:337px;
  height:395px;
  margin-top: 20px;
  margin-right: 20px;
  background-color: #f2f5f4;
  float: right;
}
.login_bottom{
  font-size: 13px;
  color: #333333;
  margin-top: 53px;
  text-align: center;
}
.login_ul{
  width: 300px;
  text-decoration: none;
  list-style: none;
}
.login_ul>li{
  margin-left: 20px;
  margin-bottom: 33px;
}
.login_ul>li:nth-child(2){
  width: 300px;
  height: 38px;
  border: 1px solid #00bc8d;
}
.login_ul>li:nth-child(4){
  width: 303px;
}
.login_ul>li:nth-child(3)>div{
  float: left;
  margin-left:5px
}
.y-left{
  width: 208px;
  height: 38px;
  border: 1px solid #00bc8d;
  float: left;
}
.y-left>div{
  float: left;
  margin-left:5px
}
.y-right{
  width: 80px;
  height: 38px;
  border: 1px solid #00bc8d;
  float: right;
}
.y-right img{
  width: 100%;
  height: 100%;
}
.login_ul>li:nth-child(3){
  width: 300px;
  height: 38px;
  border: 1px solid #00bc8d;
}
.login_ul>li:nth-child(2)>div{
  float: left;
   margin-left:5px
}
.login_ul>li:nth-child(3)>div{
  float: left;
  margin-left:5px
}
.login_ul>li:first-child{
font-size: 18px;
  color: #333333;
  margin-top: 38px;
  margin-bottom: 20px;
}
.login_input{
  border: none;
  outline: none;
  font-size: 18px;
  padding-left: 10px;
  margin-top: 7px;
  BACKGROUND-COLOR: transparent
}
.login_usrimg{
  margin-top: 3px;
}
.login_btn{
  width: 100%;
  height: 40px;
  line-height: 40px;
  margin-top: 111px;
  background-color: #00bc8d;
  color: #ffffff;
  cursor: pointer;
  text-align: center;
  border-radius: 5px;
}